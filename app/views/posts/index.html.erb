 <h2>All posts</h2>
 <h4><%= @posts.count%> posts in all</h4>
 <hr>
 <% @posts.each do |post| %>
    <article>
    <h2> <%= post.title %> </h2>
    <p>
        <%= markdown(post.content) %>
        <small><%= markdown(post.citations) %> </small>
    </p>

    </article>
    <%= link_to "Edit Post", edit_post_path(post) %> |
    <%= link_to "Destroy", post_path(post), method: :delete, data: {confirm: "Delete Post?"} %>
    <hr>
 <% end %>

