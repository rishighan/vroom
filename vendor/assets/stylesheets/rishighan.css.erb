.clear-both {clear:both;}


/* Custom fonts */
/* serifs for poetry, sans for poverty */

@font-face{
    font-family:'Bitter-regular', serif;
    src: url(<%= asset_path 'Bitter-Regular.ttf' %>);
}

@font-face{
    font-family:'Bitter-italic', serif;
    src:url('/assets/fonts/Bitter-Italic.ttf');
}

@font-face{
    font-family:'Bitter-bold', serif;
    src:url('/assets/fonts/Bitter-Bold.ttf');
}



/* Poetry page */
.haiku{
    font-family:'Bitter-regular';
    font-size:1.1em;
}

.haiku2{
    font-family:'Times';
    font-size:1.1em;
}
